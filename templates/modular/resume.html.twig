<section id="resume">
    {% for section in page.header.sections %}
    <div class="row {{ section.css_class }}">
        <div class="col-md-3 header-col">
            <h1><span>{{ section.title }}</span></h1>
        </div>
        <div class="col-md-9 main-col">
            {% for item in section.items %}
            <div class="row item">
                <div class="col-md-12">
                    {% if item.title %}
                    <h3>{{ item.title }}</h3>
                    {% endif %}
                    {% if item.info or item.date %}
                    <p class="info">{{ item.info }} <span>&bull;</span> <em class="date">{{ item.date }}</em></p>
                    {% endif %}
                    <p>
                        {{ item.description }}
                    </p>

                    {% if item.skills %}
                    
                    <div class="row">
                    {% for skill in item.skills %}
                    <div class="col-md-6">
                      <div class="col-md-4 px-0">
                        <em>{{ skill.name }}</em>
                      </div>
                      <div class="col-md-8 px-0 progress">
                        <div class="progress-bar  bg-dark" role="progressbar" style="width: {{ skill.level }}%" aria-valuenow="{{ skill.level }}" aria-valuemin="0" aria-valuemax="100"></div>
                      </div>
                    </div>
                    {% endfor %}
                  </div>
                    {% endif %}

                </div>
            </div>
            {% endfor %}
        </div>
    </div>
    {% endfor %}
</section>
